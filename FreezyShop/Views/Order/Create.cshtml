@model FreezyShop.Models.OrderViewModel

@{
    ViewData["Title"] = "Order";
}


<head>
    <script src="~/creditCardValidator.js" type="text/javascript"></script>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="~/css/checkout.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

</head>
<body>

<div class="container">

    <form asp-action="Create" method="post">
    <input type="hidden" asp-for="@Model.CartItems" />
            <input type="hidden" asp-for="@Model.User" />
            <input type="hidden" asp-for ="@Model.UserId" />
            <input type="hidden" asp-for="@Model.ShippingMethod" />
            <input type="hidden" asp-for="@Model.ShippingTaxes" />
            <input type="hidden" asp-for="@Model.Discount" />
        <div class="row">

            <div class="col">

                <h3 class="title">billing address</h3>

                <div class="inputBox">
                    <span>Full Name :</span>
                    <input asp-for="FullName" type="text" placeholder="FullName" required>
                </div>
                <div class="inputBox">
                    <span>Email :</span>
                    <input asp-for="Email" type="email" placeholder="example@example.com" required>
                </div>

                <div class="inputBox">
                    <span>Address :</span>
                    <input asp-for="Address" type="text" placeholder="Rua 25 de setembro" required>
                </div>

                <div class="flex">
                    <div class="inputBox">
                        <span>District :</span>
                        	<select asp-for="District" required>
								<option value="Viana do Castelo">Viana do Castelo</option>
								<option value="Braga">Braga</option>
								<option value="Vila Real">Vila Real</option>
								<option value="Bragança">Bragança</option>
								<option value="Porto">Porto</option>
								<option value="Aveiro">Aveiro</option>
								<option value="Viseu">Viseu</option>
								<option value="Guarda">Guarda</option>
								<option value="Coimbra">Coimbra</option>
								<option value="Castelo Branca">Castelo Branco</option>
								<option value="Leiria">Leiria</option>
								<option value="Lisboa">Lisboa</option>
								<option value="Santarém">Santarém</option>
								<option value="Portalegre">Portalegre</option>
								<option value="Setúbal">Setúbal</option>
								<option value="Évora">Évora</option>
								<option value="Beja">Beja</option>
								<option value="Faro">Faro</option>
								
							</select>
                    </div>
                    <div class="inputBox">
                        <span>Zip Code :</span>
                        <input type="text"  asp-for="ZipCode" placeholder="1234-456" data-mask="0000-000" required>
                     
                    </div>
                </div>

            </div>

            <div class="col">

                <h3 class="title">payment</h3>

                <div class="inputBox">
                    <span>cards accepted :</span>
                    <img src="~/images/card_img.png" alt="">
                </div>
                <div class="inputBox">
                    <span>name on card :</span>
                    <input type="text"   asp-for="NameOnCard" placeholder="name card" required>
                </div>
                <div class="inputBox">
                <span>Card Number:</span>
                   <input id="card"  asp-for="CardNumber"   placeholder="Card Number" data-mask="9999 9999 9999 9999" required>
                   <div id="logo" style="position: absolute; margin-right: 15px;margin-top: 262px;"></div>
                </div>

                <div class="flex">
                    <div class="inputBox">
                        <span>Expiry Date</span>
                        <input type="text"  asp-for="ExpiryDate"   placeholder="12/27" data-mask="99/99" required>
                    </div>
                    <div class="inputBox">
                        <span>CVV :</span>
                        <input type="text"  asp-for="CVV" placeholder="123" data-mask="000" required>
                    </div>
                </div>

            </div>
    
        </div>

        <input type="submit" value="Checkout" class="submit-btn">
        <span style="position: absolute;margin-top: -16px;margin-left: 155px;">Shipping Method:</span>
         @if(@Model.ShippingMethod == "CttExpress")
                {
                <img id="ctt" src="~/images/cttrexpress.png" alt="Option 1" style="width: 60px;position: absolute;margin-left: 196px;margin-top: 10px;">
            }
            else{

                 <img id="ctt" src="~/images/ctt.jpg" alt="Option 1" style="width: 60px;position: absolute;margin-left: 196px;margin-top: 10px;">
                }
        <span style="position: absolute;margin-top: -16px;margin-left: 320px;">Delevery Date:</span>
        <label style="position: absolute;margin-left: 337px;margin-top: 25px;">@Model.DeliveryDate.ToShortDateString()</label>
    </form>

</div>    
<script src="~/js/creditcard.js"></script>
</body>

<script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/vanilla-masker/1.2.0/vanilla-masker.min.js"></script>